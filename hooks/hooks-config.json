{
  "$schema": "https://claude.ai/schemas/hooks.json",
  "description": "Hooks de productividad para Claude Code",
  "hooks": {
    "PostToolUse": [
      {
        "name": "auto-test-on-edit",
        "description": "Ejecuta tests automáticamente después de editar código",
        "matcher": "Write|Edit",
        "command": "./hooks/post-edit-test.sh",
        "timeout": 30000,
        "enabled": true
      },
      {
        "name": "lint-on-save",
        "description": "Ejecuta linter después de guardar archivos",
        "matcher": "Write",
        "command": "./hooks/lint-check.sh",
        "timeout": 10000,
        "enabled": false
      }
    ],
    "PreToolUse": [
      {
        "name": "confirm-destructive",
        "description": "Confirma antes de operaciones destructivas",
        "matcher": "Bash",
        "command": "./hooks/confirm-destructive.sh",
        "enabled": false
      }
    ],
    "Notification": [
      {
        "name": "task-complete-notify",
        "description": "Notifica cuando una tarea larga termina",
        "command": "./hooks/notify-complete.sh",
        "enabled": true
      }
    ]
  },
  "profiles": {
    "development": {
      "auto-test-on-edit": true,
      "lint-on-save": false
    },
    "strict": {
      "auto-test-on-edit": true,
      "lint-on-save": true,
      "confirm-destructive": true
    },
    "fast": {
      "auto-test-on-edit": false,
      "lint-on-save": false
    }
  },
  "installation": {
    "instructions": "Copia este archivo a ~/.claude/hooks/ o agrega a settings.json",
    "settingsPath": "~/.claude/settings.json"
  }
}
